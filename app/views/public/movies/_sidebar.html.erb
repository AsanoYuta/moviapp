<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="text-center">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td class="text-center"><%= link_to "全映画を表示", movies_path %></td>
      </tr>
    <% genres.each do |genre| %>
      <tr>
        <td class="align-middle text-center">
          <%= link_to movies_path(genre_id: genre.id) do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>