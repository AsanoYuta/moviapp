<div class ="container">
<div class="row mb-5">
<h2 class="font-weight-bold">ユーザー情報編集</h2>
</div>
</div>

<div class="col-md-6 offset-md-4">
<div class="text-center">
<%= form_with model: @user, method: :patch do |f| %>
<table>
 <thead>
  <tr>
    <td>ユーザー名</td>
    <td>
       <div class="form-group">
       <%= f.text_field :name, id:"name", class: 'form-control' %>
       </div>
    </td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td>
       <div class="form-group">
       <%= f.text_field :email, id:"email", class: 'form-control' %>
       </div>
    </td>
  </tr>
  <tr>
    <td>プロフィール画像</td>
    <td>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file user_image' %>
    </td>
  </tr>
  <tr>
    <td></td>
    <td>
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    </td>
  </tr>

 </thead>
</table>
<% end %>
</div>
</div>