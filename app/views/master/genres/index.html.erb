<div class="container">
     <div class="col-md-4 text-center mb-5">
         <h4 class="bg-light">ジャンル一覧・追加</h4>
     </div>
 </div>

 <div class="container">
     <%= form_with model: @genre, url: master_genres_path do |f| %>
     <div class="form-group row mb-5">
         <label for="item_image">ジャンル名</label>
         <div class="col-md-3">
             <%= f.text_field :name,class: 'form-control', placeholder: "ジャンル名"%>
         </div>
         <div class="col-md-2">
             <%= f.submit "新規登録", class: 'btn btn-success' %>
         </div>
     </div>
 </div>
     <% end %>


 <div class="container">
     <div class ="row">
         <div class="col-md-5 ml-4">
             <table class= "table table-hover">
                 <thead class="bg-light">
                     <tr>
                         <th>ジャンル</th>
                         <th></th>
                     </tr>
                 </thead>
                 <tbody>
                 <% @genres.each do |genre| %>
                   <tr>
                       <td><%= genre.name %></td>
                       <td><%= link_to "編集する", edit_master_genre_path(genre.id), class: 'btn btn-success' %></td>
                       <td><%= link_to "削除する", master_genre_path(genre.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
                   </tr>
                 <% end %>
                 </tbody>
             </table>
         </div>
     </div>
  </div>


</div>